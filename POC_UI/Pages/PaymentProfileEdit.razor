@page "/PaymentProfileEdit"
@page "/PaymentProfileEdit/{PaymentProfileId:int}"
@inherits PaymentProfileEditBase

<div class="entity-edit">
    <h1 class="page-title">Account</h1>
    <hr />
    <EditForm Model="@PaymentProfile" OnValidSubmit="@HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="form-group row">
            <label for="AccountName" class="col-sm-3">Profile Name: </label>
            <InputText id="AccountName" class="form-control col-sm-8" @bind-Value="@PaymentProfile.Owner" placeholder="Owner"></InputText>
        </div>
        <div class="form-group row">
            <label for="Bic" class="col-sm-3">IBAN: </label>
            <InputText id="Bic" class="form-control col-sm-8" @bind-Value="@PaymentProfile.Bic" placeholder="BIC"></InputText>
        </div>

        <div class="form-group row">
            <label for="Status" class="col-sm-3">Status: </label>
            <InputText id="Status" class="form-control col-sm-8" @bind-Value="@PaymentProfile.Status" placeholder="Status"></InputText>
        </div>
        <hr />
        <button type="submit" class="btn btn-primary edit-btn" >Submit</button>
    </EditForm>
    <br/>
    <button type="button" class="btn btn-primary edit-btn" @onclick="AccountDetails">Back</button>
</div>