@page "/AccountEdit"
@page "/AccountEdit/{AccountId:int}"
@inherits AccountEditBase

<div class="entity-edit">
    <h1 class="page-title">Account</h1>
    <br />
    <EditForm Model="@Account" OnValidSubmit="@HandleValidSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <div class="form-group row">
            <label for="AccountName" class="col-sm-3">Account Name: </label>
            <InputText id="AccountName" class="form-control col-sm-8" @bind-Value="@Account.AccountName" placeholder="Account Name"></InputText>
        </div>
        <div class="form-group row">
            <label for="Address" class="col-sm-3">Address: </label>
            <InputText id="Address" class="form-control col-sm-8" @bind-Value="@Account.Address" placeholder="Address"></InputText>
        </div>
        <div class="form-group row">
            <label for="Email" class="col-sm-3">Email: </label>
            <InputText id="Email" class="form-control col-sm-8" @bind-Value="@Account.Email" placeholder="Email"></InputText>
        </div>

        <div class="form-group row">
            <label for="Phone" class="col-sm-3">Phone: </label>
            <InputText id="Phone" class="form-control col-sm-8" @bind-Value="@Account.Phone" placeholder="Phone"></InputText>
        </div>

        <div class="form-group row">
            <label for="City" class="col-sm-3">City: </label>
            <InputText id="City" class="form-control col-sm-8" @bind-Value="@Account.City" placeholder="City"></InputText>
        </div>

        <div class="form-group row">
            <label for="PrimaryContact" class="col-sm-3">Primary Contact: </label>
            <InputText id="PrimaryContact" class="form-control col-sm-8" @bind-Value="@Account.PrimaryContact" placeholder="Primary Contact"></InputText>
        </div>

        <button type="submit" class="btn btn-primary edit-btn">Submit</button>
    </EditForm>
    <br />
    <button type="button" class="btn btn-primary" @onclick="NavigateToOverview">Back</button>
</div>